CREATE TABLE ST_MEMBER(
	MEMBER_CD VARCHAR2(20) PRIMARY KEY,
	ID VARCHAR2(30) UNIQUE,
	PASSWORD VARCHAR2(50),
	NAME VARCHAR2(30),
	EMAIL VARCHAR2(70),
	JOIN_DATE VARCHAR2(30) DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI'),
	PROFILE_IMAGE VARCHAR2(300) DEAULT 'default_image.png'
);

CREATE TABLE ST_CODE(
	CODE_CD VARCHAR2(10) PRIMARY KEY,
	CODE_NAME VARCHAR2(30),
	UP_CODE VARCHAR2(10),
	CODE_LEVEL NUMBER
);

CREATE TABLE ST_STORY(
	STORY_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	STORY_NM VARCHAR2(30),
	MAKE_DATE VARCHAR2(30) DEFAULT TO_CHAR(SYSDATE,'YYYY-MM-DD HH24:MI'),
	CONSTRAINT ST_SOTRY_FK FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD)
);

CREATE TABLE ST_STORY_DETAIL(
	STORY_DETAIL_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	STORY_CD VARCHAR2(20),
	THEME VARCHAR2(100) DEFAULT 'nomal',
	CONSTRAINT ST_STORY_DETAIL_FK1 FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD),
	CONSTRAINT ST_STORY_DETAIL_FK2 FOREIGN KEY(STORY_CD) REFERENCES ST_STORY(STORY_CD)
);

CREATE TABLE ST_INTEREST(
	INTEREST_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	STORY_CD VARCHAR2(20),
	INTEREST_NM VARCHAR2(20),
	CONSTRAINT ST_INTEREST_FK1 FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD),
	CONSTRAINT ST_INTEREST_FK2 FOREIGN KEY(STORY_CD) REFERENCES ST_STORY(STORY_CD)
);

CREATE TABLE ST_CATEGORY(
	CATE_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	CATE_NM VARCHAR2(30),
	CATE_LV NUMBER,
	UP_CATE_CD VARCHAR2(20),
	CONSTRAINT ST_CATEGORY_FK FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD)
);

CREATE TABLE ST_BOARD(
	BOARD_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	CATE_CD VARCHAR2(20),
	UP_CATE_CD VARCHAR2(20),
	BOARD_TITLE VARCHAR2(200),
	BOARD_SUB_CONTENT VARCHAR2(1000),
	BOARD_CONTENT VARCHAR2(4000),
	BOARD_FILE VARCHAR2(300),
	READ_COUNT NUMBER DEFAULT 0,
	BOARD_IMAGE VARCHAR2(300),
	WRITE_DATE VARCHAR2(30) DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD AM HH:MI'),
	CONSTRAINT ST_BOARD_FK1 FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD),
	CONSTRAINT ST_BOARD_FK2 FOREIGN KEY(CATE_CD) REFERENCES ST_CATEGORY(CATE_CD),
	CONSTRAINT ST_BOARD_FK3 FOREIGN KEY(UP_CATE_CD) REFERENCES ST_CATEGORY(UP_CATE_CD)
);

CREATE TABLE ST_UPLOAD_IMAGE(
	UPLOAD_IMAGE_CD VARCHAR2(20),
	MEMBER_CD VARCHAR2(20),
	BOARD_CD VARCHAR2(20),
	UPLOAD_DATE VARCHAR2(30) DEFAULT TO_CHAR(SYSDATE,'YYYY-MM-DD HH24:MI'),
	CONSTRAINT ST_UPLOAD_IMAGE_FK1 FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD),
	CONSTRAINT ST_UPLOAD_IMAGE_FK2 FOREIGN KEY(BOARD_CD) REFERENCES ST_BOARD(BOARD_CD)
);

CREATE TABLE ST_LIKE(
	LIKE_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	BOARD_CD VARCHAR2(20),
	LIKE_DATE VARCHAR2(30) DEFAULT TO_CHAR(SYSDATE,'YYYY-MM-DD AM HH:MI'),
	CONSTRAINT ST_LIKE_FK1 FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD),
	CONSTRAINT ST_LIKE_FK2 FOREIGN KEY(BOARD_CD) REFERENCES ST_BOARD(BOARD_CD)
);

CREATE TABLE ST_COMMENT(
	COMMENT_CD VARCHAR2(20) PRIMARY KEY,
	MEMBER_CD VARCHAR2(20),
	BOARD_CD VARCHAR2(20),
	COMMENT_CONTENT VARCHAR2(4000),
	COMMENT_DATE VARCHAR2(30) DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD AM HH:MI:SS'),
	CONSTRAINT ST_COMMENT_FK1 FOREIGN KEY(MEMBER_CD) REFERENCES ST_MEMBER(MEMBER_CD),
	CONSTRAINT ST_COMMENT_FK2 FOREIGN KEY(BOARD_CD) REFERENCES ST_BOARD(BOARD_CD)
);